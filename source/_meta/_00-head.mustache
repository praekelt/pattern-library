<!DOCTYPE html>
<html class="{{ htmlClass }}">
  <head>
    <title>{{ title }}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="../../css/style.css?{{ cacheBuster }}" media="all" />

    <!-- Begin Pattern Lab (Required for Pattern Lab to run properly) -->
    {{{ patternLabHead }}}
    <!-- End Pattern Lab -->
  </head>
  <body class="{{ bodyClass }}">
    <h1 class="heading heading--xx-large">{{title}}</h1>
    <h3 class="heading heading--large">{{headline.medium}}</h3>
    {{# sectionIntroduction}}
      {{# content}}
        <h4 class="heading heading--small">{{ topic }}</h4>
        <ul class="default-ordered-list">
          {{# unorderedList}}
          <li class="default-ordered-list__item">
            <p>{{text}}</p>
          </li>
          {{/ unorderedList}}
        </ul>
      {{/ content}}
    {{/ sectionIntroduction}}
