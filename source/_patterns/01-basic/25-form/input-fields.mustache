{{# formBlock}}

    {{# inputFields}}
      <fieldset>
        <label>{{field.label}}
          <{{field.element}} type="{{field.type}}"  name="{{field.label}}" placeholder="{{field.value}}" required="{{field.validate}}"/>
        </label>
      </fieldset>
    {{/ inputFields}}

  {{# fieldTextarea}}
    <fieldset>
      <label>{{label}}
        <{{element}} name="multiline-message" rows="5" wrap="hard"></{{element}}>
      </label>
    </fieldset>
  {{/ fieldTextarea}}


  {{# fieldSelect}}
    <fieldset>
      <label>Select Dropdown
        <{{element}} name="select-drown">
          {{# fieldSelect.options}}
            <{{option.key}} value="{{option.value}}">{{option.value}}</{{option.key}}>
          {{/ fieldSelect.options}}
        </{{element}}>
      </label>
    </fieldset>
  {{/ fieldSelect}}

  {{# multipleChoice}}
  <fieldset>
    <legend>{{legend}}</legend>
    {{# fieldMultipleChoice}}
      <label>
          <{{field.element}} type="{{field.type}}" name="{{field.name}}" value="{{field.values}}" />
          {{field.label}}
      </label>
    {{/ fieldMultipleChoice}}
  </fieldset>
  {{/ multipleChoice}}

  {{# chooseOneChoice}}
  <fieldset>
    <legend>{{legend}}</legend>
    {{# fieldchooseOneChoice}}
      <label>
          <{{field.element}} type="{{field.type}}" name="{{field.name}}" value="{{field.values}}" />
          {{field.label}}
      </label>
    {{/ fieldchooseOneChoice}}
  </fieldset>
  {{/ chooseOneChoice}}
{{/ formBlock}}
