<div class="pattern-group">
{{# unorderedListBlock}}
  <ul class="default-unordered-list">
    {{# unorderedList}}
    <li class="default-unordered-list__item">
      <p>{{text}}</p>
    </li>
    {{/ unorderedList}}
  </ul>
{{/ unorderedListBlock}}

<br/>
<h3 class="heading heading--large">Numbered Ordered List</h3>
{{# orderedListBlock}}
  <ol class="default-ordered-list__item">
    {{# orderedList}}
    <li class="default-ordered-list__item">
      <p>{{text}}</p>
    </li>
    {{/ orderedList}}
  </ol>
{{/ orderedListBlock}}
</div>
